%h1 Add New Student

= form_tag students_path do

  = label :student, :uin, 'UIN'
  = text_field :student, :uin
  
  %br

  = label :student, :first_name, 'First name'
  = text_field :student, :first_name

  %br

  = label :student, :last_name, 'Last name'
  = text_field :student, :last_name
  
  %br

  = label :student, :email, 'Email'
  = text_field :student, :email
  
  %br
  
  = label :student, :note, 'Note'
  = text_field :student, :note

  = submit_tag 'Add'