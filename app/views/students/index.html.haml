%div.container
  %h1.text-center Authorized Students

  %table.table.table-striped.table-hover
    %thead
      %tr
        %th UIN
        %th First Name
        %th Last Name
        %th Email
        %th Note
    %tbody
      - @students.each do |student|
        = form_for student do |f|
          %tr
            %td= student.uin
            %td= student.first_name
            %td= student.last_name
            %td= student.email
            %td= f.text_field :note, :id => student.uin
            %td
              %button{:type => 'button', :id => "submit_btn_#{student.id}", :onclick => "var elem = document.getElementById(#{student.uin}); update_note(#{student.id}, elem.value); return false;" } Save
            
